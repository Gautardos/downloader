<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Downloader{% endblock %}</title>
    <link rel="icon" type="image/png" href="/logo.png">
    <style>
        :root {
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --text-primary: #f8fafc;
            --text-secondary: #94a3b8;
            --accent: #38bdf8;
            --accent-hover: #0ea5e9;
            --success: #22c55e;
            --danger: #ef4444;
            --glass: rgba(30, 41, 59, 0.7);
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden; /* Prevent menu overflow */
        }

        html {
            overflow-x: hidden;
        }

        @media (max-width: 768px) {
            body {
                padding-bottom: 80px; /* Space for sticky download bar */
            }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            transition: padding 0.2s;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
        }

        /* Navbar */
        nav {
            background: rgba(15, 23, 42, 0.8);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        nav .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem;
        }

        nav a {
            color: var(--text-primary);
            text-decoration: none;
            font-weight: 500;
            margin-left: 1.5rem;
            transition: color 0.2s;
        }

        nav a:hover {
            color: var(--accent);
            background: rgba(255,255,255,0.05);
        }

        /* Burger Menu Styles */
        .burger-btn {
            display: none;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
            padding: 0.5rem;
            z-index: 5000;
        }

        .burger-btn span {
            width: 25px;
            height: 2px;
            background: var(--text-primary);
            transition: 0.3s;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        @media (max-width: 900px) {
            .burger-btn { display: flex; }
            .nav-links {
                position: fixed;
                top: 0;
                right: 0;
                width: 280px;
                height: 100vh;
                background: var(--bg-secondary);
                flex-direction: column;
                padding-top: 5rem;
                transform: translateX(100%);
                visibility: hidden;
                pointer-events: none;
                transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.3s;
                box-shadow: -10px 0 30px rgba(0,0,0,0.5);
                z-index: 4000;
                gap: 0;
                align-items: center; /* Center items */
                text-align: center;
            }
            .nav-links.active { 
                transform: translateX(0); 
                visibility: visible;
                pointer-events: auto;
            }
            .nav-links a {
                width: 100%;
                padding: 1.8rem 2rem;
                margin: 0;
                border-bottom: 1px solid rgba(255,255,255,0.03);
                font-size: 1.2rem;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 1rem;
            }
        }

        nav .brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
            text-decoration: none;
            margin-left: 0 !important; /* Override nav a margin */
        }

        nav .brand img {
            width: 32px;
            height: 32px;
            object-fit: contain;
        }

        /* Cards */

        /* Notifications Status Colors */
        .notif-item.success { border-left: 4px solid var(--success); }
        .notif-item.error { border-left: 4px solid var(--danger); }
        .notif-item.info { border-left: 4px solid var(--accent); }

        .card {
            background-color: var(--bg-secondary);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        /* Grid */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        /* Typography */
        h1, h2, h3 {
            margin-top: 0;
            color: var(--text-primary);
        }

        /* Form Elements */
        label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 0.75rem;
            background-color: var(--bg-primary);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            color: var(--text-primary);
            margin-bottom: 1rem;
            box-sizing: border-box;
            transition: border-color 0.2s;
        }

        input:focus {
            outline: none;
            border-color: var(--accent);
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.2s, transform 0.1s;
            border: none;
        }

        .btn-primary {
            background-color: var(--accent);
            color: var(--bg-primary);
        }

        .btn-primary:hover {
            background-color: var(--accent-hover);
        }

        .btn-full {
            width: 100%;
            text-align: center;
        }

        /* Alerts */
        .alert {
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid transparent;
        }

        .alert-success {
            background-color: rgba(34, 197, 94, 0.1);
            border-color: var(--success);
            color: var(--success);
        }

        .alert-error {
            background-color: rgba(239, 68, 68, 0.1);
            border-color: var(--danger);
            color: var(--danger);
        }
        
        /* Status Badge */
        .badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .badge-success {
            background-color: rgba(34, 197, 94, 0.2);
            color: var(--success);
        }

        /* Notifications Sidebar */
        .notif-sidebar {
            position: fixed;
            top: 0;
            left: -400px;
            width: 350px;
            height: 100vh;
            background: var(--bg-secondary);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 3000;
            transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            box-shadow: 8px 0 32px rgba(0,0,0,0.5);
        }

        .notif-sidebar.open {
            left: 0;
        }

        .notif-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Toast Notifications */
        .toast-container {
            position: fixed;
            top: 2rem;
            right: 2rem;
            z-index: 10000;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            pointer-events: none;
        }

        .toast {
            padding: 1rem 1.5rem;
            background: var(--bg-secondary);
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            min-width: 300px;
            max-width: 450px;
            animation: toast-in 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            border-left: 4px solid var(--accent);
            pointer-events: auto;
            position: relative;
        }

        .toast.success { border-left-color: var(--success); }
        .toast.error { border-left-color: var(--danger); }

        @keyframes toast-in {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @keyframes toast-out {
            from { transform: translateX(0); opacity: 1; }
            to { transform: translateX(100%); opacity: 0; }
        }

        .notif-content {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            max-height: calc(100vh - 80px); /* Account for header */
        }

        .notif-item {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 8px;
            padding: 0.75rem;
            border-left: 3px solid var(--accent);
            animation: notifSlide 0.3s ease-out;
        }

        @keyframes notifSlide {
            from { opacity: 0; transform: translateX(20px); }
            to { opacity: 1; transform: translateX(0); }
        }

        .notif-item.error { border-left-color: var(--danger); }
        .notif-item.success { border-left-color: var(--success); }

        .notif-time {
            font-size: 0.7rem;
            color: var(--text-secondary);
            margin-bottom: 0.25rem;
        }

        .notif-close {
            background: none;
            border: none;
            color: var(--text-secondary);
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Sticky UI Container */
        .sticky-ui-container {
            position: fixed;
            bottom: 1.5rem;
            left: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 1500;
        }

        .shadow-lg {
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 8px 10px -6px rgba(0, 0, 0, 0.3);
        }

        .notif-bell-container {
            background: var(--bg-secondary);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            width: 56px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.2s, background 0.2s;
            position: relative;
        }

        .notif-bell-container:hover {
            background: #2d3748;
            transform: scale(1.05);
        }

        .notif-dot {
            position: absolute;
            top: 12px;
            right: 12px;
            width: 10px;
            height: 10px;
            background: var(--danger);
            border: 2px solid var(--bg-secondary);
            border-radius: 50%;
            display: none;
        }

        @media (max-width: 768px) {
            .sticky-ui-container {
                bottom: calc(56px + 2rem); /* Above the sticky tracker bar */
                right: 1.5rem;
                left: auto;
            }
            .notif-bell-container {
                width: 48px;
                height: 48px;
            }
        }
        .badge-video {
            background-color: rgba(56, 189, 248, 0.2);
            color: var(--accent);
        }
        .badge-music {
            background-color: rgba(168, 85, 247, 0.2);
            color: #a855f7;
        }

        /* Tracker Styles */
        .tracker-container {
            position: fixed;
            bottom: 1.5rem;
            right: 1.5rem;
            width: 450px;
            background: var(--bg-secondary);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 12px;
            box-shadow: 0 12px 48px rgba(0,0,0,0.6);
            z-index: 1000;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            max-height: 85vh;
        }

        .tracker-container.collapsed {
            max-height: 68px;
            width: 400px;
        }

        @media (max-width: 768px) {
            .tracker-container {
                bottom: 0;
                right: 0;
                left: 0;
                width: 100%;
                border-radius: 0;
                border-bottom: none;
                border-left: none;
                border-right: none;
                margin-bottom: 0;
            }
            .tracker-container.collapsed {
                width: 100%;
            }
            .tracker-header {
                padding: 0.75rem 1rem;
            }
        }

        .tracker-header {
            background: rgba(255,255,255,0.03);
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            user-select: none;
        }

        .tracker-header:hover {
            background: rgba(255,255,255,0.08);
        }

        .tracker-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9rem;
        }

        .tracker-summary {
            color: var(--text-secondary);
            font-size: 0.8rem;
            margin-left: 0.25rem;
        }

        #tracker-toggle-btn {
            font-size: 0.7rem;
            color: var(--text-secondary);
        }

        .tracker-content {
            padding: 0 1rem 1rem 1rem;
            overflow-y: auto;
            max-height: calc(85vh - 56px);
        }

        .tracker-section h3 {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: var(--text-secondary);
            margin: 1rem 0 0.5rem 0;
            letter-spacing: 0.05em;
        }

        .tracker-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .empty-msg {
            font-size: 0.8rem;
            color: var(--text-secondary);
            font-style: italic;
            padding: 0.5rem 0;
        }

        .active-item {
            background: rgba(255,255,255,0.03);
            border-radius: 8px;
            padding: 0.75rem;
            border-left: 3px solid var(--accent);
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
        }

        .item-name {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            padding-right: 0.5rem;
            flex: 1;
        }

        .item-progress {
            height: 4px;
            background: rgba(255,255,255,0.05);
            border-radius: 2px;
            margin-bottom: 0.5rem;
            overflow: hidden;
        }

        .item-progress .bar {
            height: 100%;
            background: var(--accent);
            transition: width 0.3s ease;
        }

        .item-progress .bar.pulsing {
            background: linear-gradient(90deg, var(--accent), var(--success), var(--accent));
            background-size: 200% 100%;
            animation: pulse-bg 2s infinite linear;
        }

        @keyframes pulse-bg {
            0% { background-position: 100% 0; }
            100% { background-position: -100% 0; }
        }

        .item-footer {
            display: flex;
            justify-content: space-between;
            font-size: 0.7rem;
            color: var(--text-secondary);
        }

        .queued-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(255,255,255,0.02);
            border-radius: 6px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
        }

        .btn-remove {
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            font-size: 1.2rem;
            line-height: 1;
            padding: 0 0.25rem;
        }

        .btn-remove:hover {
            color: #ff4d4d;
        }
    </style>
</head>
<body>
    <nav>
        <div class="container">
            <a href="{{ path('music') }}" class="brand">
                <img src="/logo.png" alt="Logo">
                <span>Downloader</span>
            </a>
            
            {% if app.session and app.session.get('authenticated') %}
            <div class="burger-btn" onclick="toggleBurger()">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <div class="nav-links" id="nav-links">
                {% if storage.isConfigured() %}
                    <a href="{{ path('music') }}">üéµ Music</a>
                    <a href="{{ path('music_files') }}">üìÇ Music Downloads</a>
                    <a href="{{ path('torrent') }}">üåä Torrent</a>
                    <a href="{{ path('queue') }}">‚öôÔ∏è Queue</a>
                    <a href="{{ path('history') }}">üìú History</a>
                    <a href="{{ path('config') }}">üõ†Ô∏è Settings</a>
                {% else %}
                    <a href="{{ path('config') }}">üõ†Ô∏è Setup</a>
                {% endif %}
                
                <a href="{{ path('logout') }}" style="color: var(--danger); display: flex; align-items: center; gap: 0.5rem;">
                    <span style="font-size: 1.1rem;">üèÉ</span> Logout
                </a>
            </div>
            {% endif %}
        </div>
    </nav>

    {% if app.session and app.session.get('authenticated') %}
    <div id="notif-sidebar" class="notif-sidebar">
        <div class="notif-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <h3 style="margin: 0;">Logs</h3>
                <button class="btn btn-secondary" style="font-size: 0.65rem; padding: 0.2rem 0.5rem; background: rgba(255,255,255,0.05);" onclick="clearNotifications()">Clear All</button>
                <button id="btn-browser-notif" class="btn btn-primary" style="font-size: 0.65rem; padding: 0.2rem 0.5rem;" onclick="requestBrowserNotifications()">üîî Enable Alerts</button>
            </div>
            <button class="notif-close" onclick="toggleNotifSidebar()">√ó</button>
        </div>
        <div id="notif-content" class="notif-content">
            <div class="empty-msg" style="text-align: center; margin-top: 2rem; color: var(--text-secondary);">No logs yet.</div>
        </div>
    </div>
    {% endif %}

    <div class="container">
        <div class="toast-container" id="toast-container"></div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </div>

    {% if app.session and app.session.get('authenticated') %}
    <!-- Sticky UI Container (Bottom Right) -->
    <div class="sticky-ui-container">
        <div class="notif-bell-container shadow-lg" onclick="toggleNotifSidebar()">
            <span style="font-size: 1.5rem;">üîî</span>
            <div id="notif-dot" class="notif-dot"></div>
        </div>
    </div>
    {% endif %}

    <!-- Global Download Tracker -->
    {% if (hide_tracker is not defined or not hide_tracker) and (app.session and app.session.get('authenticated')) %}
    <div id="download-tracker" class="tracker-container collapsed">
        <div class="tracker-header">
            <div class="tracker-title" onclick="toggleTracker()">
                <span class="tracker-icon">üöÄ</span>
                <strong>Downloads</strong>
                <span id="tracker-summary" class="tracker-summary">(0 active, 0 queued)</span>
            </div>
            <div class="tracker-controls">
                <button id="tracker-toggle-btn" class="btn btn-secondary btn-icon" onclick="toggleTracker()">‚ñº</button>
            </div>
        </div>
        <div class="tracker-content">
            <div class="tracker-section">
                <h3>Ongoing</h3>
                <div id="active-downloads-list" class="tracker-list">
                    <!-- Dynamic -->
                    <div class="empty-msg">No active downloads</div>
                </div>
            </div>
            <div class="tracker-section">
                <h3>Upcoming</h3>
                <div id="queued-downloads-list" class="tracker-list">
                    <!-- Dynamic -->
                    <div class="empty-msg">Queue is empty</div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <script>
        const progressRouteTemplate = "{{ path('progress', {downloadId: '000000'}) }}";
        const queueStatusRoute = "{{ path('queue_status') }}";
        const queueRemoveRouteTemplate = "{{ path('queue_remove', {index: 'IDX'}) }}";

        // Queue State (UI only)
        let serverQueue = [];
        let serverActiveTask = null;

        function toggleTracker() {
            const el = document.getElementById('download-tracker');
            el.classList.toggle('collapsed');
            localStorage.setItem('tracker_collapsed', el.classList.contains('collapsed'));
            document.getElementById('tracker-toggle-btn').innerText = el.classList.contains('collapsed') ? '‚ñ≤' : '‚ñº';
        }

        function updateTrackerSummary() {
            const activeCount = serverActiveTask ? 1 : 0;
            const queuedCount = serverQueue.length;
            document.getElementById('tracker-summary').innerText = `(${activeCount} active, ${queuedCount} queued)`;
        }

        function renderQueue(queue) {
            serverQueue = queue;
            const list = document.getElementById('queued-downloads-list');
            list.innerHTML = '';
            
            if (queue.length === 0) {
                list.innerHTML = '<div class="empty-msg">Queue is empty</div>';
            } else {
                queue.forEach((item, index) => {
                    const mediaIcons = { 
                        'music': 'üéµ', 'video': 'üé•', 'text': 'üìÑ', 'ebook': 'üìö', 
                        'archive': 'üì¶', 'image': 'üíø', 'photo': 'üñºÔ∏è', 'other': '‚ùì' 
                    };
                    const typeIcon = mediaIcons[item.type] || (item.type === 'music' ? 'üéµ' : 'üé•');
                    const typeLabel = (item.type || 'torrent').toUpperCase();
                    const div = document.createElement('div');
                    div.className = 'queued-item';
                    div.innerHTML = `
                        <div class="item-name" title="${item.filename}">
                            <span class="badge ${item.type === 'music' ? 'badge-music' : 'badge-video'}" style="padding: 0.1rem 0.4rem; font-size: 0.6rem; margin-right: 0.4rem;">
                                ${typeIcon} ${typeLabel}
                            </span>
                            ${item.filename}
                        </div>
                        <button class="btn-remove" onclick="removeFromQueue(${index})">√ó</button>
                    `;
                    list.appendChild(div);
                });
            }
            updateTrackerSummary();
        }

        async function removeFromQueue(index) {
            try {
                const res = await fetch(queueRemoveRouteTemplate.replace('IDX', index), { method: 'POST' });
                if (res.ok) syncWithServer();
            } catch (e) {
                console.error("Failed to remove item", e);
            }
        }

        async function syncWithServer() {
            try {
                const res = await fetch(queueStatusRoute);
                const data = await res.json();
                
                renderQueue(data.queue || []);
                updateActiveTaskUI(data.active);
            } catch (e) {
                console.warn("Sync failed", e);
            }
        }

        async function updateActiveTaskUI(active) {
            const list = document.getElementById('active-downloads-list');
            serverActiveTask = active;

            if (!active) {
                list.innerHTML = '<div class="empty-msg">No active downloads</div>';
                updateTrackerSummary();
                return;
            }

            try {
                const downloadId = active.download_id || active.downloadId;
                const res = await fetch(progressRouteTemplate.replace('000000', downloadId));
                const progress = await res.json();
                
                const filename = progress.filename || active.filename || active.override_filename || 'Initializing...';
                const mediaIcons = { 
                    'music': 'üéµ', 'audio': 'üéµ', 'video': 'üé•', 'text': 'üìÑ', 'ebook': 'üìö', 
                    'archive': 'üì¶', 'image': 'üíø', 'photo': 'üñºÔ∏è', 'other': '‚ùì' 
                };
                const typeIcon = mediaIcons[active.type] || (active.type === 'music' || active.type === 'audio' ? 'üéµ' : 'üé•');
                const typeLabel = (active.type || 'torrent').toUpperCase();
                const isMusic = active.type === 'music';

                list.innerHTML = `
                    <div class="active-item" id="active-${downloadId}">
                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom:0.75rem">
                            <span class="badge ${isMusic ? 'badge-music' : 'badge-video'}" style="padding: 0.2rem 0.6rem; font-size: 0.7rem;">
                                ${typeIcon} ${typeLabel}
                            </span>
                            <span class="badge badge-success" style="padding: 0.2rem 0.6rem; font-size: 0.7rem;">${isMusic ? 'PROCESSING' : 'DOWNLOADING'}</span>
                        </div>
                        <div class="item-header">
                            <span class="item-name" title="${filename}" style="font-size: 0.9rem; font-weight: 600; font-family: ${isMusic ? 'monospace' : 'inherit'};">${filename}</span>
                            ${!isMusic ? `<span class="item-percent" style="font-weight: bold; color: var(--accent);">${progress.percentage || 0}%</span>` : ''}
                        </div>
                        <div class="item-progress" style="${isMusic ? 'height: 2px; opacity: 0.5;' : ''}">
                            <div class="bar ${isMusic ? ' pulsing' : ''}" style="width: ${isMusic ? '100' : (progress.percentage || 0)}%"></div>
                        </div>
                        <div class="item-footer">
                            <span class="item-status">${isMusic ? 'See Queue for full logs' : (progress.status === 'downloading' ? 'Downloading...' : 'Starting...')}</span>
                            <span class="item-speed">${progress.speed || '...'}</span>
                        </div>
                    </div>
                `;
            } catch (e) {
                console.warn("Progress update failed", e);
            }
            updateTrackerSummary();
        }

        function toggleNotifSidebar() {
            const sidebar = document.getElementById('notif-sidebar');
            sidebar.classList.toggle('open');
            if (sidebar.classList.contains('open')) {
                document.getElementById('notif-dot').style.display = 'none';
            }
        }

        function clearNotifications() {
            if (!confirm('Clear all logs?')) return;
            localStorage.setItem('notif_logs', '[]');
            document.getElementById('notif-content').innerHTML = '<div class="empty-msg" style="text-align: center; margin-top: 2rem; color: var(--text-secondary);">No logs yet.</div>';
        }

        window.notify = function(type, message) {
            const container = document.getElementById('notif-content');
            const dot = document.getElementById('notif-dot');
            const sidebar = document.getElementById('notif-sidebar');

            if (container.querySelector('.empty-msg')) {
                container.innerHTML = '';
            }

            const now = new Date().toLocaleTimeString();
            
            // Rich notification formatting
            let displayHtml = '';
            const mediaIcons = { 
                'music': 'üéµ', 'audio': 'üéµ', 'video': 'üé•', 'text': 'üìÑ', 'ebook': 'üìö', 
                'archive': 'üì¶', 'image': 'üíø', 'photo': 'üñºÔ∏è', 'other': '‚ùì', 'default': 'üì¶' 
            };
            const statusEmojis = { 'success': '‚úÖ', 'error': '‚ùå', 'info': '‚ÑπÔ∏è', 'Finished': '‚ú®', 'Started': 'üöÄ', 'Failed': '‚ùå' };

            if (typeof message === 'object') {
                const icon = mediaIcons[message.media_type] || mediaIcons.default;
                const statusEmoji = statusEmojis[message.action] || statusEmojis[message.type] || '';
                
                displayHtml = `
                    <div style="display: flex; align-items: flex-start; gap: 1rem;">
                        <span style="font-size: 1.5rem;">${statusEmoji}</span>
                        <div>
                            <div style="font-weight: bold; margin-bottom: 2px;">
                                ${message.action || 'Update'}: ${icon} ${message.media_type || ''}
                            </div>
                            <div style="font-size: 0.85rem; opacity: 0.9; word-break: break-all;">
                                ${message.item || message.message}
                            </div>
                        </div>
                    </div>
                `;
            } else {
                // Fallback for simple strings
                const lower = message.toLowerCase();
                let emoji = '‚ÑπÔ∏è';
                if (lower.includes('success')) emoji = '‚úÖ';
                if (lower.includes('error') || lower.includes('fail')) emoji = '‚ùå';

                displayHtml = `<b>${emoji} ${message}</b>`;
            }

            const logEntry = { type, message: displayHtml, time: now };
            
            // Persist
            const logs = JSON.parse(localStorage.getItem('notif_logs') || '[]');
            logs.unshift(logEntry);
            localStorage.setItem('notif_logs', JSON.stringify(logs.slice(0, 100))); // Keep last 100

            renderNotification(logEntry, container, true);

            if (!sidebar.classList.contains('open')) {
                dot.style.display = 'block';
            }

            // Show Toast
            const toastContainer = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            let toastEmoji = '‚ÑπÔ∏è';
            if (type === 'success' || type === 'Finished') toastEmoji = '‚úÖ';
            if (type === 'error' || type === 'Failed') toastEmoji = '‚ùå';

            const toastBody = typeof message === 'object' ? (message.item || message.message) : message;

            toast.innerHTML = `
                <span style="font-size: 1.25rem;">${toastEmoji}</span>
                <div style="font-size: 0.9rem; font-weight: 500;">${toastBody}</div>
            `;
            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.style.animation = 'toast-out 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards';
                setTimeout(() => toast.remove(), 300);
            }, 5000);

            // Native Browser Notification
            if (Notification.permission === "granted" && typeof message === 'object') {
                const icon = mediaIcons[message.media_type] || mediaIcons.default;
                const statusEmoji = statusEmojis[message.action] || statusEmojis[message.type] || '';
                
                new Notification(`${statusEmoji} ${message.action || 'Update'}: ${message.media_type || ''}`, {
                    body: message.item || message.message || '',
                    icon: '/logo.png',
                    tag: 'downloader-update'
                }).onclick = function() {
                    window.focus();
                    this.close();
                };
            }
        };

        async function requestBrowserNotifications() {
            if (!("Notification" in window)) {
                alert("This browser does not support desktop notification");
                return;
            }

            const permission = await Notification.requestPermission();
            if (permission === "granted") {
                document.getElementById('btn-browser-notif').style.display = 'none';
                new Notification("Notifications Enabled!", {
                    body: "You will now receive desktop alerts for downloads.",
                    icon: '/logo.png'
                });
            }
        }

        function renderNotification(log, container, prepend = false) {
            const div = document.createElement('div');
            div.className = `notif-item ${log.type}`;
            div.innerHTML = `
                <div class="notif-time">${log.time}</div>
                <div class="notif-msg">${log.message}</div>
            `;
            if (prepend) container.prepend(div);
            else container.appendChild(div);
        }

        function toggleBurger() {
            document.getElementById('nav-links').classList.toggle('active');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const logs = JSON.parse(localStorage.getItem('notif_logs') || '[]');
            const container = document.getElementById('notif-content');
            if (logs.length > 0) {
                container.innerHTML = '';
                logs.forEach(log => renderNotification(log, container));
            }

            async function pollServerNotifications() {
            try {
                const res = await fetch("{{ path('notifications_poll') }}");
                const data = await res.json();
                if (data.notifications && data.notifications.length > 0) {
                    data.notifications.forEach(notif => {
                        if (window.notify) {
                            window.notify(notif.type, notif);
                        }
                    });
                }
            } catch (e) {
                console.error("Failed to poll notifications", e);
            }
        }

        // Initialize
        if (localStorage.getItem('tracker_collapsed') === 'true') {
            document.getElementById('download-tracker').classList.add('collapsed');
            document.getElementById('tracker-toggle-btn').innerText = '‚ñ≤';
        } else {
            document.getElementById('download-tracker').classList.remove('collapsed');
            document.getElementById('tracker-toggle-btn').innerText = '‚ñº';
        }

        syncWithServer();
        setInterval(syncWithServer, 3000);
        setInterval(pollServerNotifications, 5000);

        if (Notification.permission === "granted") {
            const btn = document.getElementById('btn-browser-notif');
            if (btn) btn.style.display = 'none';
        }
        });
    </script>
</body>
