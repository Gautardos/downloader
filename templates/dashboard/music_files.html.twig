{% extends 'base.html.twig' %}

{% block title %}Music Explorer - Downloader{% endblock %}

{% block body %}
<div class="header" id="music-header">
    <div>
        <h1 style="display: flex; align-items: center; gap: 0.75rem; margin: 0;">
            <span style="font-size: 2rem;">üìÇ</span>
            Music Downloads
        </h1>
        <p class="text-secondary" style="margin: 0.5rem 0 0 0;">Explorer les fichiers dans <code>{{ root }}</code></p>
    </div>
    <div id="move-container">
        <button id="btn-lyrics" class="btn btn-secondary" onclick="fetchLyrics()">
            <span id="lyrics-icon">üé§</span> Add Lyrics
        </button>
        <button id="btn-move" class="btn btn-primary" onclick="moveToLibrary()" {% if files is empty %}disabled style="opacity: 0.5; cursor: not-allowed;"{% endif %}>
            <span id="move-icon">üöö</span> Move to library
        </button>
        <div id="move-loader" style="display: none; align-items: center; gap: 0.5rem; color: var(--accent);">
            <div style="font-size: 1.2rem; animation: spin 1s infinite linear;">‚åõ</div>
            <span>Processing...</span>
        </div>
    </div>
</div>

<div class="card" style="padding: 0; overflow: hidden;">
    <table style="width: 100%; border-collapse: collapse; text-align: left;">
        <thead style="background: rgba(255,255,255,0.03);">
            <tr>
                <th style="padding: 1rem;">File Name</th>
                <th class="hide-mobile" style="padding: 1rem;">Location</th>
                <th class="hide-mobile" style="padding: 1rem; text-align: center;">Lyrics</th>
                <th class="hide-mobile" style="padding: 1rem;">Size</th>
                <th class="hide-mobile" style="padding: 1rem;">Added</th>
                <th style="padding: 1rem; width: 100px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for file in files %}
            <tr style="border-bottom: 1px solid rgba(255,255,255,0.05); transition: background 0.2s;" onmouseover="this.style.background='rgba(255,255,255,0.02)'" onmouseout="this.style.background='transparent'">
                <td style="padding: 1rem; font-weight: 500;">{{ file.name }}</td>
                <td class="hide-mobile" style="padding: 1rem; color: var(--text-secondary); font-size: 0.85rem;" title="{{ file.path }}">
                    {{ file.rel_path }}
                </td>
                <td class="hide-mobile" style="padding: 1rem; text-align: center; font-size: 1.2rem;">
                    {% if file.has_lyrics %}
                        <span title="Lyrics Present">üìù</span>
                    {% else %}
                        <span title="No Lyrics" style="opacity: 0.3; filter: grayscale(1);">‚ùå</span>
                    {% endif %}
                </td>
                <td class="hide-mobile" style="padding: 1rem;"><span class="badge" style="background: rgba(255,255,255,0.05);">{{ (file.size / 1024 / 1024)|number_format(2) }} MB</span></td>
                <td class="hide-mobile" style="padding: 1rem; font-size: 0.85rem; color: var(--text-secondary);">{{ file.mtime|date('d/m/Y H:i') }}</td>
                <td style="padding: 1rem;">
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <button class="btn btn-secondary btn-icon" style="padding: 0.4rem 0.8rem; font-size: 0.75rem;" onclick="viewDetails('{{ file.path|e('js') }}', '{{ file.name|e('js') }}')">
                            üîç Details
                        </button>
                        <button class="btn btn-secondary btn-icon" 
                                style="padding: 0.4rem 0.8rem; font-size: 0.75rem; {% if file.has_lyrics %}opacity: 0.5; cursor: not-allowed; filter: grayscale(1);{% endif %}" 
                                onclick="fetchSingleLyrics('{{ file.path|e('js') }}', this)"
                                {% if file.has_lyrics %}disabled title="Lyrics already present"{% endif %}>
                            üéµ Lyrics
                        </button>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" style="padding: 2rem; text-align: center; color: var(--text-secondary);">
                    No audio files found in the download directory.
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Details Modal -->
<div id="details-modal" class="modal-overlay">
    <div class="modal-container-custom">
        <div class="modal-header-custom">
            <h2 id="details-title" style="margin: 0; font-size: 1.25rem;">File Details</h2>
            <button class="btn-remove" onclick="closeDetails()" style="font-size: 2rem;">√ó</button>
        </div>
        <div id="details-loading" style="text-align: center; padding: 2rem;">
            <div style="font-size: 2rem; animation: spin 1s infinite linear;">‚åõ</div>
            <p>Extracting metadata...</p>
        </div>
        <div id="details-content" class="modal-body-custom" style="display: none;">
            <div id="details-grid" class="details-grid">
                <!-- Dynamic -->
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }

    #music-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #move-container {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    @media (max-width: 768px) {
        #music-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.5rem;
        }

        #move-container {
            width: 100%;
            justify-content: flex-end;
            flex-wrap: wrap;
        }

        .hide-mobile {
            display: none !important;
        }

        td {
            padding: 0.75rem !important;
        }
    }

    /* Modal Enhancements */
    .modal-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.8);
        backdrop-filter: blur(8px);
        z-index: 2000;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .modal-container-custom {
        background: var(--bg-secondary);
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.1);
        width: 100%;
        max-width: 600px;
        max-height: 90vh;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        box-shadow: 0 24px 64px rgba(0,0,0,0.5);
        animation: modalAppear 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-header-custom {
        display: flex; 
        justify-content: space-between; 
        align-items: center; 
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .modal-body-custom {
        padding: 1.5rem;
        overflow-y: auto;
        flex: 1;
    }

    .details-grid {
        display: grid; 
        grid-template-columns: 140px 1fr; 
        gap: 1rem; 
        font-size: 0.9rem;
    }

    @keyframes modalAppear {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
        .modal-overlay {
            padding: 1rem;
        }
        .modal-container-custom {
            max-height: 95vh;
        }
        .details-grid {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }
        .details-grid > div:nth-child(even) {
            margin-bottom: 0.75rem;
            padding-left: 0.5rem;
            border-left: 2px solid var(--accent);
        }
        .modal-header-custom, .modal-body-custom {
            padding: 1rem;
        }
    }
</style>

<!-- Lyrics Modal -->
<div id="lyrics-modal" class="modal-overlay" style="z-index: 2100;">
    <div class="modal-container-custom" style="max-width: 800px;">
        <div class="modal-header-custom">
            <h2 style="margin: 0; font-size: 1.25rem;">Lyrics Fetching Summary</h2>
            <button class="btn-remove" onclick="closeLyricsModal()" style="font-size: 2rem;">√ó</button>
        </div>
        
        <div class="modal-body-custom">
            <div id="lyrics-results-container" style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse; text-align: left; font-size: 0.9rem;">
                    <thead style="position: sticky; top: 0; background: var(--bg-secondary); z-index: 1;">
                        <tr style="border-bottom: 2px solid rgba(255,255,255,0.1);">
                            <th style="padding: 0.75rem;">Artist</th>
                            <th style="padding: 0.75rem;">Title</th>
                            <th style="padding: 0.75rem;">Status</th>
                            <th class="hide-mobile" style="padding: 0.75rem;">Type</th>
                        </tr>
                    </thead>
                    <tbody id="lyrics-results-body">
                        <!-- Dynamic -->
                    </tbody>
                </table>
            </div>
            
            <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end;">
                <button class="btn btn-primary" onclick="window.location.reload()">Refresh Page</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Check if Add Lyrics button should be enabled
    const filesMissingLyrics = Array.from(document.querySelectorAll('td span[title="No Lyrics"]')).length;
    const btnLyrics = document.getElementById('btn-lyrics');
    if (btnLyrics && filesMissingLyrics === 0) {
        btnLyrics.disabled = true;
        btnLyrics.style.opacity = '0.5';
        btnLyrics.title = 'All files already have lyrics.';
    }
});

async function fetchLyrics() {
    const btn = document.getElementById('btn-lyrics');
    const originalText = btn.innerHTML;

    btn.disabled = true;
    btn.style.opacity = '0.7';
    btn.innerHTML = '<span style="display:inline-block; animation: spin 1s infinite linear; margin-right:5px;">‚åõ</span> Fetching...';

    try {
        const res = await fetch("{{ path('fetch_lyrics') }}", {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        const data = await res.json();
        
        if (data.success) {
            showLyricsResults(data.results);
            window.notify('success', 'Lyrics fetching completed!');
        } else {
            let errorMsg = 'Error: ' + (data.message || 'Unknown error');
            if (data.details) {
                errorMsg += '\n\nDetails:\n' + data.details;
            }
            alert(errorMsg);
            btn.disabled = false;
            btn.style.opacity = '1';
            btn.innerHTML = originalText;
        }
    } catch (e) {
        alert('Fetch Error: ' + e.message);
        btn.disabled = false;
        btn.style.opacity = '1';
        btn.innerHTML = originalText;
    }
}

async function fetchSingleLyrics(path, btn) {
    const originalText = btn.innerHTML;
    const originalPointerEvents = btn.style.pointerEvents;

    btn.disabled = true;
    btn.style.opacity = '0.7';
    btn.style.pointerEvents = 'none';
    btn.innerHTML = '<span style="display:inline-block; animation: spin 1s infinite linear;">‚åõ</span>';

    try {
        const res = await fetch("{{ path('fetch_lyrics') }}", {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ path: path })
        });

        const data = await res.json();
        
        if (data.success) {
            // Check if specific file result is found
            const fileResult = data.results.find(r => r.file === path.split(/[\\/]/).pop());
            if (fileResult) {
                if (fileResult.status === 'found') {
                     window.notify('success', `Lyrics found for ${fileResult.title}`);
                     setTimeout(() => window.location.reload(), 1000);
                } else {
                     window.notify('info', `Lyrics status: ${fileResult.status} (${fileResult.reason || 'No reason'})`);
                }
            } else {
                showLyricsResults(data.results);
            }
        } else {
            let errorMsg = 'Error: ' + (data.message || 'Unknown error');
            if (data.details) {
                errorMsg += '\n\nDetails:\n' + data.details;
            }
            alert(errorMsg);
        }
    } catch (e) {
        alert('Fetch Error: ' + e.message);
    } finally {
        btn.disabled = false;
        btn.style.opacity = '1';
        btn.style.pointerEvents = originalPointerEvents;
        btn.innerHTML = originalText;
    }
}

function showLyricsResults(results) {
    const modal = document.getElementById('lyrics-modal');
    const body = document.getElementById('lyrics-results-body');
    body.innerHTML = '';

    if (!results || results.length === 0) {
        body.innerHTML = '<tr><td colspan="4" style="padding:2rem; text-align:center;">No processing needed or no files found.</td></tr>';
    } else {
        results.forEach(res => {
            const tr = document.createElement('tr');
            tr.style.borderBottom = '1px solid rgba(255,255,255,0.05)';
            
            let statusStyle = 'color: var(--text-secondary)';
            let statusText = res.status;
            if (res.status === 'found') {
                statusStyle = 'color: #4ade80; font-weight: bold;';
                statusText = '‚úÖ Found';
            } else if (res.status === 'not_found') {
                statusStyle = 'color: #f87171';
                statusText = '‚ùå Not Found';
            } else if (res.status === 'skipped') {
                statusStyle = 'color: #94a3b8; font-style: italic;';
                statusText = '‚è≠Ô∏è ' + (res.reason || 'Skipped');
            }

            const typeBadge = res.type === 'synced' ? 
                '<span class="badge" style="background: #06b6d4; color: white;">Synced</span>' : 
                (res.type === 'unsynced' ? '<span class="badge" style="background: #f59e0b; color: white;">Unsynced</span>' : '-');

            tr.innerHTML = `
                <td style="padding: 0.75rem;">${res.artist || '-'}</td>
                <td style="padding: 0.75rem;">${res.title || '-'}</td>
                <td style="padding: 0.75rem; ${statusStyle}">${statusText}</td>
                <td class="hide-mobile" style="padding: 0.75rem;">${typeBadge}</td>
            `;
            body.appendChild(tr);
        });
    }

    modal.style.display = 'flex';
}

function closeLyricsModal() {
    document.getElementById('lyrics-modal').style.display = 'none';
}

async function viewDetails(path, name) {
    console.log("View Details clicked for:", name, "Path:", path);
    const modal = document.getElementById('details-modal');
    const title = document.getElementById('details-title');
    const loading = document.getElementById('details-loading');
    const content = document.getElementById('details-content');
    const grid = document.getElementById('details-grid');

    modal.style.display = 'flex';
    title.innerText = 'Details: ' + name;
    loading.style.display = 'block';
    content.style.display = 'none';
    grid.innerHTML = '';

    try {
        console.log("Fetching tags from:", "{{ path('file_tags') }}");
        const res = await fetch("{{ path('file_tags') }}", {
            method: 'POST',
            body: JSON.stringify({ path: path }),
            headers: { 'Content-Type': 'application/json' }
        });
        
        console.log("Response status:", res.status);
        const data = await res.json();
        console.log("Response data:", data);

        if (data.success) {
            loading.style.display = 'none';
            content.style.display = 'block';
            
            for (const [key, value] of Object.entries(data.tags)) {
                if (value && value !== 'None' && value !== '[]') {
                    const label = document.createElement('div');
                    label.style.color = 'var(--text-secondary)';
                    label.style.fontWeight = 'bold';
                    label.style.textTransform = 'capitalize';
                    label.innerText = key.replace('number', ' #');
                    
                    const val = document.createElement('div');
                    val.style.wordBreak = 'break-word';
                    val.innerText = value;
                    
                    if (key === 'lyrics') {
                        val.style.whiteSpace = 'pre-wrap';
                        val.style.background = 'rgba(0,0,0,0.2)';
                        val.style.padding = '0.75rem';
                        val.style.borderRadius = '4px';
                        val.style.marginTop = '0.5rem';
                        val.style.gridColumn = '1 / span 2';
                        label.style.gridColumn = '1 / span 2';
                    }
                    
                    grid.appendChild(label);
                    grid.appendChild(val);
                }
            }
        } else {
            console.error("Extraction failed:", data.message);
            alert('Failed: ' + data.message);
            closeDetails();
        }
    } catch (e) {
        console.error("Fetch error:", e);
        alert('Error: ' + e.message);
        closeDetails();
    }
}

async function moveToLibrary() {
    const btn = document.getElementById('btn-move');
    const loader = document.getElementById('move-loader');

    btn.style.display = 'none';
    loader.style.display = 'flex';

    try {
        const res = await fetch("{{ path('move_to_library') }}", {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        const data = await res.json();
        
        if (data.status === 'success') {
            window.notify('success', {
                action: 'Finished',
                media_type: 'music',
                item: data.processed + ' files moved to Library'
            });
            setTimeout(() => window.location.reload(), 2000);
        } else {
            alert('Error: ' + (data.error || 'Unknown error'));
            btn.style.display = 'inline-flex';
            loader.style.display = 'none';
        }
    } catch (e) {
        alert('Fetch Error: ' + e.message);
        btn.style.display = 'inline-flex';
        loader.style.display = 'none';
    }
}

function closeDetails() {
    document.getElementById('details-modal').style.display = 'none';
}
</script>
{% endblock %}
