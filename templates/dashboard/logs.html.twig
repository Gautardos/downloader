{% extends 'base.html.twig' %}

{% block title %}Log Files - Downloader{% endblock %}

{% block body %}
<div class="card shadow-lg" style="margin-bottom: 2rem;">
    <div style="padding: 1.5rem; background: rgba(255,255,255,0.02); border-bottom: 1px solid rgba(255,255,255,0.05);">
        <h1 style="margin: 0; font-size: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <span>ðŸ“‹</span> Download Logs
        </h1>
    </div>

    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="text-align: left; border-bottom: 1px solid rgba(255,255,255,0.05);">
                    <th style="padding: 1rem 1.5rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Date</th>
                    <th style="padding: 1rem 1.5rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Log Name</th>
                    <th style="padding: 1rem 1.5rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Size</th>
                    <th style="padding: 1rem 1.5rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for log in logs %}
                    <tr style="border-bottom: 1px solid rgba(255,255,255,0.02);">
                        <td style="padding: 1rem 1.5rem; font-size: 0.9rem; color: var(--text-secondary);">{{ log.date }}</td>
                        <td style="padding: 1rem 1.5rem; font-family: monospace; font-size: 0.85rem;">{{ log.name }}</td>
                        <td style="padding: 1rem 1.5rem; font-size: 0.85rem;">{{ (log.size / 1024)|round(1) }} KB</td>
                        <td style="padding: 1rem 1.5rem;">
                            <a href="{{ path('history_log', {downloadId: log.id}) }}" target="_blank" class="btn btn-secondary" style="padding: 0.3rem 0.6rem; font-size: 0.75rem;">Open</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 3rem; color: var(--text-secondary);">No log files found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
