{% extends 'base.html.twig' %}

{% block title %}Queue Management{% endblock %}

{% block body %}
<div class="container">
    <div class="header" id="queue-header">
        <div>
            <h1 style="display: flex; align-items: center; gap: 0.75rem; margin: 0;">
                <span style="font-size: 2.5rem;">‚öôÔ∏è</span>
                Queue Management
            </h1>
            <p class="text-secondary" style="margin: 0.5rem 0 0 0;">Monitor and control the download worker state.</p>
        </div>
        <button class="btn btn-purge" onclick="purgeQueue()">
            Purge All Tasks
        </button>
    </div>

    <div class="grid" style="grid-template-columns: 1fr;">
        <!-- Active Section -->
        <div class="card shadow-lg" style="margin-bottom: 2rem; border-left: 4px solid var(--success);">
            <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                <span class="badge badge-success">NOW PROCESSING</span>
            </h3>
            <div id="active-task-container">
                <p class="empty-msg">No active task.</p>
            </div>
            
            <!-- Real-time Log Viewer (Hidden by default) -->
            <div id="log-viewer-container" style="display: none; margin-top: 1.5rem; border-top: 1px solid rgba(255,255,255,0.05); padding-top: 1.5rem;">
                <h4 style="margin: 0 0 1rem 0; font-size: 0.9rem; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.05em;">Console Output</h4>
                <div id="log-content" style="background: #000; color: #0f0; font-family: 'JetBrains Mono', 'Fira Code', monospace; font-size: 0.8rem; padding: 1rem; border-radius: 8px; height: 300px; overflow-y: auto; white-space: pre-wrap; line-height: 1.4; border: 1px solid rgba(0,255,0,0.1);">
                    Initializing log viewer...
                </div>
            </div>
        </div>

        <!-- Queue Section -->
        <div class="card shadow-lg">
            <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                Upcoming in Queue
                <span id="queue-count-badge" class="badge" style="background: rgba(255,255,255,0.05); color: var(--text-secondary);">0</span>
            </h3>
            <div class="queue-table-container" style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse; text-align: left;">
                    <thead style="border-bottom: 1px solid rgba(255,255,255,0.1);">
                        <tr>
                            <th style="padding: 1rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Type</th>
                            <th style="padding: 1rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Filename</th>
                            <th class="hide-mobile" style="padding: 1rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Path</th>
                            <th class="hide-mobile" style="padding: 1rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase;">Added At</th>
                            <th style="padding: 1rem; color: var(--text-secondary); font-size: 0.8rem; text-transform: uppercase; text-align: right;">Action</th>
                        </tr>
                    </thead>
                    <tbody id="queue-tbody">
                        <!-- Dynamic -->
                        <tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-secondary);">Queue is empty</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>


function getMediaIcon(type) {
    const mediaIcons = { 
        'music': 'üéµ', 'audio': 'üéµ', 'video': 'üé•', 'text': 'üìÑ', 'ebook': 'üìö', 
        'archive': 'üì¶', 'image': 'üíø', 'photo': 'üñºÔ∏è', 'other': '‚ùì' 
    };
    return mediaIcons[type] || (type === 'music' || type === 'audio' ? 'üéµ' : 'üé•');
}

async function purgeQueue() {
    if (!confirm('This will STOP all background downloads and clear the queue. Are you sure?')) return;
    try {
        const res = await fetch("{{ path('queue_purge') }}", { method: 'POST' });
        if (res.ok) {
            window.notify('success', 'Queue purged and worker reset.');
            refreshUI();
        }
    } catch (e) {
        window.notify('error', 'Failed to purge queue.');
    }
}

async function removeTask(index) {
    try {
        const res = await fetch(`{{ path('queue_remove', {index: 'IDX'}) }}`.replace('IDX', index), { method: 'POST' });
        if (res.ok) {
            window.notify('info', 'Task removed from queue.');
            refreshUI();
        }
    } catch (e) {
        window.notify('error', 'Failed to remove task.');
    }
}

async function refreshUI() {
    try {
        const res = await fetch("{{ path('queue_status') }}");
        const data = await res.json();
        
        renderActive(data.active);
        renderQueue(data.queue || []);
    } catch (e) {
        console.warn("Refresh failed", e);
    }
}

async function renderActive(active) {
    const container = document.getElementById('active-task-container');
    if (!active) {
        container.innerHTML = '<p class="empty-msg">No active task.</p>';
        return;
    }

    try {
        const downloadId = active.download_id || active.downloadId;
        const res = await fetch(progressRouteTemplate.replace('000000', downloadId));
        const progress = await res.json();
        
        const filename = progress.filename || active.filename || active.override_filename || 'Initializing...';
        const typeIcon = getMediaIcon(active.type);
        const typeLabel = (active.type || 'torrent').toUpperCase();

        container.innerHTML = `
            <div class="active-task-wrapper">
                <div class="active-task-icon">${typeIcon}</div>
                <div style="flex: 1; min-width: 0;">
                    <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem; flex-wrap: wrap;">
                        <span class="badge ${active.type === 'music' ? 'badge-music' : 'badge-video'}" style="padding: 0.2rem 0.6rem; font-size: 0.7rem;">
                            ${typeIcon} ${typeLabel}
                        </span>
                        <span class="badge badge-success" style="padding: 0.2rem 0.6rem; font-size: 0.7rem;">NOW PROCESSING</span>
                    </div>
                    <h4 class="active-task-title">${filename}</h4>
                    <div class="active-task-meta">
                        <span class="active-task-path">Target: <code style="background: rgba(255,255,255,0.08); padding: 0.2rem 0.4rem; border-radius: 4px; font-family: monospace;">${active.path || 'Default'}</code></span>
                        <span class="active-task-speed">${progress.speed || '...'}</span>
                    </div>
                    <div style="height: 14px; background: rgba(255,255,255,0.05); border-radius: 7px; overflow: hidden; margin-bottom: 0.5rem; border: 1px solid rgba(255,255,255,0.03);">
                        <div style="width: ${progress.percentage || 0}%; height: 100%; background: linear-gradient(90deg, var(--accent), var(--success)); transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);"></div>
                    </div>
                    <div style="display: flex; justify-content: space-between; font-size: 0.85rem;">
                        <span style="color: var(--text-secondary); font-style: italic;">${progress.status === 'downloading' ? 'Transferring data...' : 'Contacting providers...'}</span>
                        <span style="font-weight: 800; color: var(--text-primary);">${progress.percentage || 0}%</span>
                    </div>
                </div>
            </div>
        `;
    } catch (e) {
        console.warn("Active progress fetch failed", e);
    }

    // Handle Music Logs
    const logContainer = document.getElementById('log-viewer-container');
    if (active.type === 'music') {
        logContainer.style.display = 'block';
        updateActiveLog();
    } else {
        logContainer.style.display = 'none';
    }
}

async function updateActiveLog() {
    try {
        const res = await fetch("{{ path('queue_active_log') }}");
        const data = await res.json();
        const content = document.getElementById('log-content');
        if (data.log) {
            const isAtBottom = content.scrollHeight - content.clientHeight <= content.scrollTop + 50;
            content.innerText = data.log;
            if (isAtBottom) content.scrollTop = content.scrollHeight;
        }
    } catch (e) {
        console.error("Log fetch failed", e);
    }
}

function renderQueue(queue) {
    const tbody = document.getElementById('queue-tbody');
    const badge = document.getElementById('queue-count-badge');
    badge.innerText = queue.length;

    if (queue.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-secondary);">Queue is empty</td></tr>';
        return;
    }

    tbody.innerHTML = '';
    queue.forEach((item, index) => {
        const typeIcon = getMediaIcon(item.type);
        const tr = document.createElement('tr');
        tr.style.borderBottom = '1px solid rgba(255,255,255,0.03)';
        tr.innerHTML = `
            <td style="padding: 1rem; font-size: 1.5rem;">${typeIcon}</td>
            <td style="padding: 1rem;">
                <div class="queue-filename" title="${item.filename}">
                    ${item.filename}
                </div>
            </td>
            <td class="hide-mobile" style="padding: 1rem; font-family: monospace; font-size: 0.75rem; color: var(--text-secondary);">${item.path || '--'}</td>
            <td class="hide-mobile" style="padding: 1rem; font-size: 0.8rem; color: var(--text-secondary);">${item.date_added || '--'}</td>
            <td style="padding: 1rem; text-align: right;">
                <button class="btn btn-remove-task" onclick="removeTask(${index})">
                    Remove
                </button>
            </td>
        `;
        tbody.appendChild(tr);
    });
}

document.addEventListener('DOMContentLoaded', () => {
    refreshUI();
    setInterval(refreshUI, 2000);
});
</script>

<style>
    #queue-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .btn-purge {
        background: var(--danger);
        color: white;
    }

    .active-task-wrapper {
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .active-task-icon {
        font-size: 3.5rem;
        background: rgba(255,255,255,0.03);
        padding: 1rem;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .active-task-title {
        margin: 0 0 0.5rem 0;
        font-size: 1.3rem;
        font-weight: 700;
        word-break: break-all;
    }

    .active-task-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .queue-filename {
        font-weight: 500;
        font-size: 0.9rem;
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .btn-remove-task {
        padding: 0.4rem 0.8rem;
        font-size: 0.75rem;
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    @media (max-width: 768px) {
        #queue-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .active-task-wrapper {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .active-task-icon {
            font-size: 2.5rem;
            padding: 0.75rem;
        }

        .active-task-meta {
            justify-content: center;
        }

        .hide-mobile {
            display: none !important;
        }

        .queue-filename {
            max-width: 150px;
        }
    }
</style>
{% endblock %}
