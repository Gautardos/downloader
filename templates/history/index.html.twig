{% extends 'base.html.twig' %}

{% block title %}Download History - Alldebrid Downloader{% endblock %}

{% block body %}
<div class="card shadow-lg" style="margin-bottom: 2rem; border-radius: 16px; overflow: hidden;">
    <div style="padding: 1.5rem; background: rgba(255,255,255,0.02); border-bottom: 1px solid rgba(255,255,255,0.05); display: flex; justify-content: space-between; align-items: center;">
        <h1 style="margin: 0; font-size: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <span>üìú</span> Download History
        </h1>
        <div class="badge badge-success">{{ totalItems }} total elements</div>
    </div>

    <div style="overflow-x: auto;">
        <table class="history-table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Date</th>
                    <th style="width: 30%;">Filename</th>
                    <th>Size/Files</th>
                    <th>Speed</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in history %}
                    <tr class="status-{{ item.status ?? 'success' }}">
                        <td style="font-size: 1.5rem; text-align: center;">
                            {{ (item.type ?? 'video') == 'music' ? 'üéµ' : 'üé•' }}
                        </td>
                        <td style="white-space: nowrap; color: var(--text-secondary); font-size: 0.8rem;">
                            {{ (item.date ?? item.timestamp ?? "now")|date('Y-m-d H:i:s') }}
                        </td>
                        <td>
                            <div style="font-weight: 500; margin-bottom: 0.25rem;">{{ item.filename ?? item.item ?? 'Unknown' }}</div>
                            <div style="font-size: 0.75rem; color: var(--text-secondary); opacity: 0.7; font-family: monospace; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300px;" title="{{ item.path ?? '' }}">
                                {{ item.path ?? '' }}
                            </div>
                        </td>
                        <td>
                            {% if (item.type ?? 'video') == 'video' %}
                                <span class="size-tag" style="background: rgba(56, 189, 248, 0.1); color: var(--accent);">
                                    {% set size = item.size ?? 0 %}
                                    {% if size > 1024 * 1024 * 1024 %}
                                        {{ (size / 1024 / 1024 / 1024)|round(2) }} GB
                                    {% else %}
                                        {{ (size / 1024 / 1024)|round(1) }} MB
                                    {% endif %}
                                </span>
                            {% else %}
                                <span style="font-size: 0.8rem; color: var(--text-secondary);">
                                    {{ item.file_count ?? 0 }} files
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <span style="font-family: monospace; font-size: 0.8rem; color: var(--text-secondary);">
                                {{ item.speed ?? '--' }}
                            </span>
                        </td>
                        <td>
                            {% if (item.status ?? 'success') == 'error' %}
                                <span class="badge" style="background: var(--danger); color: white;">FAILED</span>
                            {% elseif (item.status ?? 'success') == 'warning' %}
                                <span class="badge" style="background: #f59e0b; color: white;">WARNING</span>
                            {% elseif (item.status ?? 'success') == 'canceled' %}
                                <span class="badge" style="background: var(--text-secondary); color: white;">CANCELED</span>
                            {% else %}
                                <span class="badge" style="background: var(--success); color: white;">SUCCESS</span>
                            {% endif %}
                        </td>
                        <td style="white-space: nowrap;">
                            <div style="display: flex; gap: 0.4rem; justify-content: flex-end;">
                                {% if (item.action ?? '') == 'library_move' %}
                                    <button class="btn" style="padding: 0.4rem 0.8rem; font-size: 0.8rem; background: var(--accent); color: white; border: none; border-radius: 6px;" 
                                            onclick="showMigrationSummary('Migration Summary', {{ (item.details ?? [])|json_encode }})">
                                        Summary
                                    </button>
                                {% elseif (item.type ?? 'video') == 'music' %}
                                    {% if item.download_id is defined %}
                                        <a href="{{ path('history_log', {downloadId: item.download_id}) }}" target="_blank" class="btn btn-icon" title="View Logs">üìÑ</a>
                                    {% endif %}
                                    <button class="btn btn-icon" onclick="showTracksList('Expected', {{ (item.expected_tracks ?? [])|json_encode }})" title="Expected Files">üìã</button>
                                    {% if (item.status ?? 'success') == 'warning' %}
                                        <button class="btn btn-icon" onclick="showTracksList('Missing', {{ (item.missing_tracks ?? [])|json_encode }})" title="Missing Files">‚ùå</button>
                                    {% endif %}
                                    <button class="btn btn-icon" onclick="showTracksList('Downloaded', {{ (item.downloaded_tracks ?? [])|json_encode }}, true)" title="Downloaded Files">‚úÖ</button>
                                {% else %}
                                    <span style="color: var(--text-secondary); font-size: 0.8rem;">--</span>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            No downloads recorded yet.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if totalPages > 1 %}
        <div style="padding: 1.5rem; display: flex; justify-content: center; gap: 0.5rem; border-top: 1px solid rgba(255,255,255,0.05);">
            {% if currentPage > 1 %}
                <a href="{{ path('history', {page: currentPage - 1}) }}" class="btn btn-secondary">Previous</a>
            {% endif %}
            
            <div style="display: flex; align-items: center; padding: 0 1rem; color: var(--text-secondary); font-size: 0.9rem;">
                Page {{ currentPage }} of {{ totalPages }}
            </div>

            {% if currentPage < totalPages %}
                <a href="{{ path('history', {page: currentPage + 1}) }}" class="btn btn-secondary">Next</a>
            {% endif %}
        </div>
    {% endif %}
</div>

<!-- Migration Modal -->
<div id="migration-modal" class="modal" style="display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); backdrop-filter: blur(8px);">
    <div style="background: var(--bg-card); margin: 5% auto; padding: 2rem; border-radius: 16px; border: 1px solid rgba(255,255,255,0.1); width: 90%; max-width: 1000px; max-height: 80vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h3 id="mig-modal-title" style="margin: 0; color: var(--accent);">Migration Summary</h3>
            <button onclick="document.getElementById('migration-modal').style.display='none'" class="btn" style="padding: 0.5rem;">‚úï</button>
        </div>
        <div id="mig-modal-content" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse; font-size: 0.85rem;">
                <thead>
                    <tr style="border-bottom: 2px solid rgba(255,255,255,0.1);">
                        <th style="padding: 0.75rem; text-align: left; color: var(--text-secondary);">Original File</th>
                        <th style="padding: 0.75rem; text-align: left; color: var(--text-secondary);">Artist/Title</th>
                        <th style="padding: 0.75rem; text-align: left; color: var(--text-secondary);">Genre</th>
                        <th style="padding: 0.75rem; text-align: left; color: var(--text-secondary);">New Path</th>
                        <th style="padding: 0.75rem; text-align: left; color: var(--text-secondary);">Steps</th>
                        <th style="padding: 0.75rem; text-align: center; color: var(--text-secondary);">Status</th>
                    </tr>
                </thead>
                <tbody id="mig-modal-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Tracks Modal -->
<div id="tracks-modal" class="modal" style="display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); backdrop-filter: blur(8px);">
    <div style="background: var(--bg-card); margin: 5% auto; padding: 2rem; border-radius: 16px; border: 1px solid rgba(255,255,255,0.1); width: 80%; max-width: 800px; max-height: 80vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h3 id="modal-title" style="margin: 0; color: var(--accent);">Expected Tracks</h3>
            <button onclick="document.getElementById('tracks-modal').style.display='none'" class="btn" style="padding: 0.5rem;">‚úï</button>
        </div>
        <div id="modal-content" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 2px solid rgba(255,255,255,0.1);">
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Artist</th>
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Album</th>
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Song Name</th>
                        <th id="modal-th-lyrics" style="padding: 1rem; text-align: center; color: var(--text-secondary); display: none;">Lyrics</th>
                    </tr>
                </thead>
                <tbody id="modal-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
function showTracksList(title, tracks, showLyrics = false) {
    document.getElementById('modal-title').innerText = title + ' Tracks (' + (tracks ? tracks.length : 0) + ')';
    const tbody = document.getElementById('modal-tbody');
    tbody.innerHTML = '';
    
    document.getElementById('modal-th-lyrics').style.display = showLyrics ? 'table-cell' : 'none';

    if (!tracks || tracks.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" style="text-align: center; padding: 2rem; color: var(--text-secondary);">No tracks data available.</td></tr>';
    } else {
        tracks.forEach(track => {
            const tr = document.createElement('tr');
            tr.style.borderBottom = '1px solid rgba(255,255,255,0.05)';
            tr.innerHTML = `
                <td style="padding: 0.75rem 1rem;">${track.artist || '--'}</td>
                <td style="padding: 0.75rem 1rem;">${track.album || '--'}</td>
                <td style="padding: 0.75rem 1rem; font-weight: 500;">${track.song_name || '--'}</td>
                ${showLyrics ? `<td style="padding: 0.75rem 1rem; text-align: center;">${track.lyrics ? 'üìù' : '--'}</td>` : ''}
            `;
            tbody.appendChild(tr);
        });
    }
    
    document.getElementById('tracks-modal').style.display = 'block';
}

function showMigrationSummary(title, results) {
    document.getElementById('mig-modal-title').innerText = title + ' (' + (results ? results.length : 0) + ' files)';
    const tbody = document.getElementById('mig-modal-tbody');
    tbody.innerHTML = '';
    
    if (!results || results.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" style="text-align: center; padding: 2rem; color: var(--text-secondary);">No results available.</td></tr>';
    } else {
        results.forEach(res => {
            const tr = document.createElement('tr');
            tr.style.borderBottom = '1px solid rgba(255,255,255,0.05)';
            
            // Handle fallbacks for nested metadata (legacy data)
            const artist = res.artist || (res.metadata_before ? res.metadata_before.artist : '--');
            const title = res.title || (res.metadata_before ? res.metadata_before.title : '--');
            const genre = res.genre || (res.metadata_before ? res.metadata_before.genre : '--');
            const old_genre = res.old_genre || (res.metadata_before ? res.metadata_before.genre : '--');
            const newPath = res.new_path || res.final_path || '--';
            const originalFile = res.file || res.original_file || '--';
            const source = res.genre_source || '--';
            const logs = res.logs || [];

            let genreDisplay = genre;
            if (genre !== old_genre) {
                 genreDisplay = `<div style="text-decoration: line-through; opacity: 0.5; font-size: 0.7rem;">${old_genre}</div>
                                 <div style="font-weight: 600;">${genre}</div>`;
            }

            let sourceBadge = '';
            const sourceColorMap = {
                'AI (Grok)': '#8b5cf6',
                'Mapping': '#3b82f6',
                'Existing File': '#10b981',
                'Session Cache': '#f59e0b',
                'Original': '#6b7280'
            };
            const sourceColor = sourceColorMap[source] || 'rgba(255,255,255,0.1)';
            sourceBadge = `<div style="margin-top: 0.25rem;"><span class="badge" style="background: ${sourceColor}; color: white; font-size: 0.6rem; padding: 0.1rem 0.4rem;">${source}</span></div>`;

            let logsHtml = '<ul style="margin: 0; padding-left: 1rem; font-size: 0.7rem; color: var(--text-secondary); list-style-type: none;">';
            if (logs.length > 0) {
                logs.forEach(log => {
                    logsHtml += `<li style="margin-bottom: 0.2rem; border-left: 2px solid rgba(255,255,255,0.1); padding-left: 0.5rem;">${log}</li>`;
                });
            } else {
                logsHtml += '<li>No detailed logs available.</li>';
            }
            logsHtml += '</ul>';

            tr.innerHTML = `
                <td style="padding: 0.75rem; color: var(--text-secondary); font-size: 0.75rem;">${originalFile}</td>
                <td style="padding: 0.75rem;">
                    <div style="font-weight: 500;">${artist}</div>
                    <div style="font-size: 0.75rem; opacity: 0.8;">${title}</div>
                </td>
                <td style="padding: 0.75rem;">
                    ${genreDisplay}
                    ${sourceBadge}
                </td>
                <td style="padding: 0.75rem; font-family: monospace; font-size: 0.7rem; opacity: 0.7; word-break: break-all;">${newPath}</td>
                <td style="padding: 0.75rem; min-width: 250px;">
                    <details>
                        <summary style="cursor: pointer; font-size: 0.75rem; color: var(--accent); outline: none;">View Process Steps</summary>
                        <div style="margin-top: 0.5rem; background: rgba(0,0,0,0.2); padding: 0.5rem; border-radius: 4px;">
                            ${logsHtml}
                        </div>
                    </details>
                </td>
                <td style="padding: 0.75rem; text-align: center;">
                    ${res.status === 'success' ? '‚úÖ' : '‚ùå'}
                </td>
            `;
            tbody.appendChild(tr);
        });
    }
    
    document.getElementById('migration-modal').style.display = 'block';
}

// Close modals on outside click
window.onclick = function(event) {
    const tracksModal = document.getElementById('tracks-modal');
    const migModal = document.getElementById('migration-modal');
    if (event.target == tracksModal) tracksModal.style.display = "none";
    if (event.target == migModal) migModal.style.display = "none";
}
</script>

<style>
.history-table {
    width: 100%;
    border-collapse: collapse;
}

.history-table th {
    text-align: left;
    padding: 1rem 1.5rem;
    background: rgba(255,255,255,0.01);
    color: var(--text-secondary);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.history-table td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.03);
    vertical-align: middle;
}

.history-table tr:hover td {
    background: rgba(255,255,255,0.01);
}

.size-tag {
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
}

.btn-icon {
    padding: 0.4rem;
    border-radius: 8px;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    cursor: pointer;
    transition: all 0.2s;
}

.btn-icon:hover {
    background: rgba(255,255,255,0.1);
    transform: translateY(-1px);
}
</style>
{% endblock %}
