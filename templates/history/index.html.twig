{% extends 'base.html.twig' %}

{% block title %}Download History - Alldebrid Downloader{% endblock %}

{% block body %}
<div class="card shadow-lg" style="margin-bottom: 2rem; border-radius: 16px; overflow: hidden;">
    <div style="padding: 1.5rem; background: rgba(255,255,255,0.02); border-bottom: 1px solid rgba(255,255,255,0.05); display: flex; justify-content: space-between; align-items: center;">
        <h1 style="margin: 0; font-size: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <span>üìú</span> Download History
        </h1>
        <div class="badge badge-success">{{ totalItems }} total elements</div>
    </div>

    <div style="overflow-x: auto;">
        <table class="history-table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Date</th>
                    <th style="width: 30%;">Filename</th>
                    <th>Size/Files</th>
                    <th>Speed</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in history %}
                    <tr class="status-{{ item.status|default('success') }}">
                        <td style="font-size: 1.5rem; text-align: center;">
                            {{ (item.type|default('video')) == 'music' ? 'üéµ' : 'üé•' }}
                        </td>
                        <td style="white-space: nowrap; color: var(--text-secondary); font-size: 0.8rem;">
                            {{ item.date|date('Y-m-d H:i:s') }}
                        </td>
                        <td>
                            <div style="font-weight: 500; margin-bottom: 0.25rem;">{{ item.filename }}</div>
                            <div style="font-size: 0.75rem; color: var(--text-secondary); opacity: 0.7; font-family: monospace; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300px;" title="{{ item.path }}">
                                {{ item.path }}
                            </div>
                        </td>
                        <td>
                            {% if (item.type|default('video')) == 'video' %}
                                <span class="size-tag" style="background: rgba(56, 189, 248, 0.1); color: var(--accent);">
                                    {% set size = item.size ?? 0 %}
                                    {% if size > 1024 * 1024 * 1024 %}
                                        {{ (size / 1024 / 1024 / 1024)|round(2) }} GB
                                    {% else %}
                                        {{ (size / 1024 / 1024)|round(1) }} MB
                                    {% endif %}
                                </span>
                            {% else %}
                                <span style="font-size: 0.8rem; color: var(--text-secondary);">
                                    {{ item.file_count|default(0) }} files
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <span style="font-family: monospace; font-size: 0.8rem; color: var(--text-secondary);">
                                {{ item.speed|default('--') }}
                            </span>
                        </td>
                        <td>
                            {% if item.status|default('success') == 'error' %}
                                <span class="badge" style="background: var(--danger); color: white;">FAILED</span>
                            {% elseif item.status|default('success') == 'warning' %}
                                <span class="badge" style="background: #f59e0b; color: white;">WARNING</span>
                            {% elseif item.status|default('success') == 'canceled' %}
                                <span class="badge" style="background: var(--text-secondary); color: white;">CANCELED</span>
                            {% else %}
                                <span class="badge" style="background: var(--success); color: white;">SUCCESS</span>
                            {% endif %}
                        </td>
                        <td style="white-space: nowrap;">
                            <div style="display: flex; gap: 0.4rem; justify-content: flex-end;">
                                {% if (item.type|default('video')) == 'music' %}
                                    {% if item.download_id is defined %}
                                        <a href="{{ path('history_log', {downloadId: item.download_id}) }}" target="_blank" class="btn btn-icon" title="View Logs">üìÑ</a>
                                    {% endif %}
                                    <button class="btn btn-icon" onclick="showTracksList('Expected', {{ item.expected_tracks|default([])|json_encode }})" title="Expected Files">üìã</button>
                                    {% if item.status|default('success') == 'warning' %}
                                        <button class="btn btn-icon" onclick="showTracksList('Missing', {{ item.missing_tracks|default([])|json_encode }})" title="Missing Files">‚ùå</button>
                                    {% endif %}
                                    <button class="btn btn-icon" onclick="showTracksList('Downloaded', {{ item.downloaded_tracks|default([])|json_encode }}, true)" title="Downloaded Files">‚úÖ</button>
                                {% else %}
                                    <span style="color: var(--text-secondary); font-size: 0.8rem;">--</span>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            No downloads recorded yet.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if totalPages > 1 %}
        <div style="padding: 1.5rem; display: flex; justify-content: center; gap: 0.5rem; border-top: 1px solid rgba(255,255,255,0.05);">
            {% if currentPage > 1 %}
                <a href="{{ path('history', {page: currentPage - 1}) }}" class="btn btn-secondary">Previous</a>
            {% endif %}
            
            <div style="display: flex; align-items: center; padding: 0 1rem; color: var(--text-secondary); font-size: 0.9rem;">
                Page {{ currentPage }} of {{ totalPages }}
            </div>

            {% if currentPage < totalPages %}
                <a href="{{ path('history', {page: currentPage + 1}) }}" class="btn btn-secondary">Next</a>
            {% endif %}
        </div>
    {% endif %}
</div>

<!-- Tracks Modal -->
<div id="tracks-modal" class="modal" style="display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); backdrop-filter: blur(8px);">
    <div style="background: var(--bg-card); margin: 5% auto; padding: 2rem; border-radius: 16px; border: 1px solid rgba(255,255,255,0.1); width: 80%; max-width: 800px; max-height: 80vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h3 id="modal-title" style="margin: 0; color: var(--accent);">Expected Tracks</h3>
            <button onclick="document.getElementById('tracks-modal').style.display='none'" class="btn" style="padding: 0.5rem;">‚úï</button>
        </div>
        <div id="modal-content" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 2px solid rgba(255,255,255,0.1);">
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Artist</th>
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Album</th>
                        <th style="padding: 1rem; text-align: left; color: var(--text-secondary);">Song Name</th>
                        <th id="modal-th-lyrics" style="padding: 1rem; text-align: center; color: var(--text-secondary); display: none;">Lyrics</th>
                    </tr>
                </thead>
                <tbody id="modal-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
function showTracksList(title, tracks, showLyrics = false) {
    document.getElementById('modal-title').innerText = title + ' Tracks (' + (tracks ? tracks.length : 0) + ')';
    const tbody = document.getElementById('modal-tbody');
    tbody.innerHTML = '';
    
    document.getElementById('modal-th-lyrics').style.display = showLyrics ? 'table-cell' : 'none';

    if (!tracks || tracks.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" style="text-align: center; padding: 2rem; color: var(--text-secondary);">No tracks data available.</td></tr>';
    } else {
        tracks.forEach(track => {
            const tr = document.createElement('tr');
            tr.style.borderBottom = '1px solid rgba(255,255,255,0.05)';
            tr.innerHTML = `
                <td style="padding: 0.75rem 1rem;">${track.artist || '--'}</td>
                <td style="padding: 0.75rem 1rem;">${track.album || '--'}</td>
                <td style="padding: 0.75rem 1rem; font-weight: 500;">${track.song_name || '--'}</td>
                ${showLyrics ? `<td style="padding: 0.75rem 1rem; text-align: center;">${track.lyrics ? 'üìù' : '--'}</td>` : ''}
            `;
            tbody.appendChild(tr);
        });
    }
    
    document.getElementById('tracks-modal').style.display = 'block';
}

// Close modal on outside click
window.onclick = function(event) {
    const modal = document.getElementById('tracks-modal');
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

<style>
.history-table {
    width: 100%;
    border-collapse: collapse;
}

.history-table th {
    text-align: left;
    padding: 1rem 1.5rem;
    background: rgba(255,255,255,0.01);
    color: var(--text-secondary);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.history-table td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.03);
    vertical-align: middle;
}

.history-table tr:hover td {
    background: rgba(255,255,255,0.01);
}

.size-tag {
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
}

.btn-icon {
    padding: 0.4rem;
    border-radius: 8px;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    cursor: pointer;
    transition: all 0.2s;
}

.btn-icon:hover {
    background: rgba(255,255,255,0.1);
    transform: translateY(-1px);
}
</style>
{% endblock %}
