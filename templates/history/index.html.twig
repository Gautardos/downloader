{% extends 'base.html.twig' %}

{% block title %}Download History - Alldebrid Downloader{% endblock %}

{% block body %}
<div class="card shadow-lg" style="margin-bottom: 2rem; border-radius: 16px; overflow: hidden;">
    <div style="padding: 1.5rem; background: rgba(255,255,255,0.02); border-bottom: 1px solid rgba(255,255,255,0.05); display: flex; justify-content: space-between; align-items: center;">
        <h1 style="margin: 0; font-size: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <span>ðŸ“œ</span> Download History
        </h1>
        <div class="badge badge-success">{{ totalItems }} total elements</div>
    </div>

    <div style="overflow-x: auto;">
        <table class="history-table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Date</th>
                    <th style="width: 30%;">Filename</th>
                    <th>Size/Files</th>
                    <th>Speed</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in history %}
                    <tr class="status-{{ item.status|default('success') }}">
                        <td style="font-size: 1.5rem; text-align: center;">
                            {{ (item.type|default('video')) == 'music' ? 'ðŸŽµ' : 'ðŸŽ¥' }}
                        </td>
                        <td style="white-space: nowrap; color: var(--text-secondary); font-size: 0.8rem;">
                            {{ item.date|date('Y-m-d H:i:s') }}
                        </td>
                        <td>
                            <div style="font-weight: 500; margin-bottom: 0.25rem;">{{ item.filename }}</div>
                            <div style="font-size: 0.75rem; color: var(--text-secondary); opacity: 0.7; font-family: monospace; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300px;" title="{{ item.path }}">
                                {{ item.path }}
                            </div>
                        </td>
                        <td>
                            {% if (item.type|default('video')) == 'video' %}
                                <span class="size-tag" style="background: rgba(56, 189, 248, 0.1); color: var(--accent);">
                                    {% set size = item.size ?? 0 %}
                                    {% if size > 1024 * 1024 * 1024 %}
                                        {{ (size / 1024 / 1024 / 1024)|round(2) }} GB
                                    {% else %}
                                        {{ (size / 1024 / 1024)|round(1) }} MB
                                    {% endif %}
                                </span>
                            {% else %}
                                <span style="font-size: 0.8rem; color: var(--text-secondary);">
                                    {{ item.file_count|default(0) }} files
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <span style="font-family: monospace; font-size: 0.8rem; color: var(--text-secondary);">
                                {{ item.speed|default('--') }}
                            </span>
                        </td>
                        <td>
                            {% if item.status|default('success') == 'error' %}
                                <span class="badge" style="background: var(--danger); color: white;">FAILED</span>
                            {% elseif item.status|default('success') == 'canceled' %}
                                <span class="badge" style="background: var(--text-secondary); color: white;">CANCELED</span>
                            {% else %}
                                <span class="badge" style="background: var(--success); color: white;">SUCCESS</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if (item.type|default('video')) == 'music' and item.download_id is defined %}
                                <a href="{{ path('history_log', {downloadId: item.download_id}) }}" target="_blank" class="btn" style="padding: 0.4rem 0.8rem; font-size: 0.75rem; background: rgba(56, 189, 248, 0.1); color: var(--accent); border: 1px solid rgba(56, 189, 248, 0.2);">
                                    View Logs
                                </a>
                            {% else %}
                                <span style="color: var(--text-secondary); font-size: 0.8rem;">--</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            No downloads recorded yet.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if totalPages > 1 %}
        <div style="padding: 1.5rem; display: flex; justify-content: center; gap: 0.5rem; border-top: 1px solid rgba(255,255,255,0.05);">
            {% if currentPage > 1 %}
                <a href="{{ path('history', {page: currentPage - 1}) }}" class="btn btn-secondary">Previous</a>
            {% endif %}
            
            <div style="display: flex; align-items: center; padding: 0 1rem; color: var(--text-secondary); font-size: 0.9rem;">
                Page {{ currentPage }} of {{ totalPages }}
            </div>

            {% if currentPage < totalPages %}
                <a href="{{ path('history', {page: currentPage + 1}) }}" class="btn btn-secondary">Next</a>
            {% endif %}
        </div>
    {% endif %}
</div>

<style>
.history-table {
    width: 100%;
    border-collapse: collapse;
}

.history-table th {
    text-align: left;
    padding: 1rem 1.5rem;
    background: rgba(255,255,255,0.01);
    color: var(--text-secondary);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.history-table td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.03);
    vertical-align: middle;
}

.history-table tr:hover td {
    background: rgba(255,255,255,0.01);
}

.size-tag {
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
}
</style>
{% endblock %}
